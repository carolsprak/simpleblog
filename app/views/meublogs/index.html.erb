<p id="notice"><%= notice %></p>

<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to 'Listagem', meublogs_path %></li>
  <li><%= link_to 'Nova Postagem', new_meublog_path %></li>
</ul>

<h2>Artigos do Blog</h2>

<table class="table">
  <thead>
    <tr>
      <th>Título</th>
      <th>Texto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  	<% @meublogs.each do |meublog| %>
		<tr>
			<td><%= meublog.title %></td>
			<td><%= meublog.text %></td>
			<td>
				<%= link_to meublog, class: 'btn btn-primary btn-xs' do %>
					<i class="glyphicon glyphicon-list-alt"></i> Exibir
				<% end %>
			</td>
			<td>
				<%= link_to edit_meublog_path(meublog), class: 'btn btn-info btn-xs' do %>
					<i class="glyphicon glyphicon-pencil"></i> Alterar
				<% end %>
			</td>
			<td>
				<%= link_to meublog, method: :delete, data: { confirm: 'Você realmente deseja remover a Postagem?' }, class: 'btn btn-danger btn-xs' do %>
					<i class="glyphicon glyphicon-trash"></i> Remover
				<% end %>
			</td>
		</tr>
	<% end %>		
		<tr>
			
		</tr>
  </tbody>
</table>

<br>

<%= link_to new_meublog_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> Novo
<% end %>
